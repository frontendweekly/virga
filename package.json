{
  "name": "virga",
  "version": "0.8.0",
  "description": "Virga is a bit opinionated but minimum Eleventy starter kit which also focused on using Netlify. And I'm using it as my blog about Eleventy.",
  "scripts": {
    "build": "cross-env ELEVENTY_ENV=production eleventy",
    "build:clean": "rimraf dist/*",
    "build:function": "netlify functions:build --src functions",
    "build:post": "node __task/build-post.js",
    "build:postcss": "cross-env NODE_ENV=production postcss src/_postcss/main.pcss -o src/_includes/assets/styles/main.css",
    "build:production": "run-s build:function build:postcss build",
    "dev": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "dev:netlify": "cross-env ELEVENTY_ENV=development netlify dev",
    "start": "npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch"
  },
  "author": "Yuya Saito <hello@studiomohawk.com> (https://github.com/studiomohawk)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontendweekly/virga.git"
  },
  "keywords": [
    "eleventy",
    "netlify"
  ],
  "bugs": {
    "url": "https://github.com/frontendweekly/virga/issues"
  },
  "homepage": "https://github.com/frontendweekly/virga#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-cache-assets": "^2.0.2",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@frontendweekly/collection-postfeed": "^0.0.6",
    "@frontendweekly/collection-posts": "^0.0.6",
    "@frontendweekly/molle": "^0.0.19",
    "autoprefixer": "^9.8.4",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.1.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "sanitize-html": "^1.27.0",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.17.2",
    "@testing-library/jest-dom": "^5.10.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-jest-dom": "^3.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-testing-library": "^3.3.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-date-mock": "^1.0.8",
    "jest-fetch-mock": "^3.0.3",
    "jest-runner-eslint": "^0.9.0",
    "jest-watch-select-projects": "^2.0.0",
    "lint-staged": "^10.2.11",
    "mock-fs": "^4.12.0",
    "netlify-cli": "^2.54.0",
    "npm-run-all": "^4.1.5",
    "posthtml": "^0.13.1",
    "posthtml-urls": "^1.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "qoa": "^0.2.0",
    "signale": "^1.4.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}
