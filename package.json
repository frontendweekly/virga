{
  "name": "virga",
  "version": "0.8.0",
  "description": "Virga is a bit opinionated but minimum Eleventy starter kit which also focused on using Netlify. And I'm using it as my blog about Eleventy.",
  "scripts": {
    "build": "cross-env ELEVENTY_ENV=production eleventy",
    "build:clean": "rimraf dist/*",
    "build:function": "netlify functions:build --src functions",
    "build:post": "node __task/build-post.js",
    "build:postcss": "cross-env NODE_ENV=production postcss src/_postcss/main.pcss -o src/_includes/assets/styles/main.css",
    "build:production": "run-s build:function build:postcss build",
    "dev": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "dev:netlify": "cross-env ELEVENTY_ENV=development netlify dev",
    "start": "npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch"
  },
  "author": "Yuya Saito <hello@studiomohawk.com> (https://github.com/studiomohawk)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontendweekly/virga.git"
  },
  "keywords": [
    "eleventy",
    "netlify"
  ],
  "bugs": {
    "url": "https://github.com/frontendweekly/virga/issues"
  },
  "homepage": "https://github.com/frontendweekly/virga#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-cache-assets": "^2.0.3",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "@frontendweekly/collection-postfeed": "^0.0.7",
    "@frontendweekly/collection-posts": "^0.0.7",
    "@frontendweekly/molle": "^0.0.21",
    "autoprefixer": "^10.1.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^13.0.0",
    "postcss-load-config": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "sanitize-html": "^2.2.0",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.29.0",
    "@testing-library/jest-dom": "^5.11.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-import-resolver-jest": "^3.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-dom": "^3.6.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "jest-date-mock": "^1.0.8",
    "jest-fetch-mock": "^3.0.3",
    "jest-runner-eslint": "^0.10.0",
    "jest-watch-select-projects": "^2.0.0",
    "lint-staged": "^10.5.3",
    "mock-fs": "^4.13.0",
    "netlify-cli": "^2.69.6",
    "npm-run-all": "^4.1.5",
    "posthtml": "^0.15.1",
    "posthtml-urls": "^1.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "qoa": "^0.2.0",
    "signale": "^1.4.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2"
  }
}
