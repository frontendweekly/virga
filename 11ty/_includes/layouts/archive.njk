{% extends 'layouts/base.njk' %}
{% set pageType = 'Archive' %}

{# Intro content #}
{% set introHeading = title %}

{% set metaAuthor = author %}
{% set metaDate = date %}

{% set introSummary %}
  {{ content | safe }}
{% endset %}

{# Post list content #}
{% set postListHeading = 'All posts' %}
{% set postListItems = collections.posts %}

{% block content %}
<main id="main-content" tabindex="-1" class="page-{{ pageType | lower }}">
  {% include "partials/components/intro.njk" %}
  {% include "partials/components/post-list.njk" %}
</main>
{% endblock %}
