.c-post-list {
  contain: content;
}

.c-post-list__link,
.c-post-list__link:visited {
  color: var(--color-text);
  text-decoration: none;
}

.c-post-list__link:hover {
  text-decoration: underline;
}

.c-post-list__date {
  font-size: 0.8em;
  font-style: italic;
}

.c-post-list__summary {
  margin-top: var(--space-base);
}
