.o-wrapper {
  --space-char-per-line: 72;

  width: 100%;
  max-width: calc(var(--space-char-per-line) * 1ch);
  padding: 0 calc(var(--space-base) * 2);
  margin-right: auto;
  margin-left: auto;
}

.o-inner-wrapper {
  width: 100%;
  max-width: calc(var(--space-char-per-line) * 1ch);
  padding: 0 calc(var(--space-base) * 2);
  margin-right: auto;
  margin-left: auto;
}
