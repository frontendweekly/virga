<p class="c-post-meta">
  {% if metaAuthor %}
    <span class="c-post-meta__author p-author h-card">{{ metaAuthor }}</span>
  {% endif %}
  {% if metaDate %}
    <time datetime="{{ metaDate | w3DateFilter }}"
          class="c-post-meta__date dt-published">{{ metaDate | dateFilter }}</time>
  {% endif %}
  {% if tags %}
    <span class="p-author h-card">/ Filed under {% for item in tags %}<a href="/tags/{{ item | slug }}">{{ item }}</a> {% endfor %}</span>
  {% endif %}
</p>
